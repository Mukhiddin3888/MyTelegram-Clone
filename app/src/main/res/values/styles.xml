<resources>
    <!-- Base application theme. -->

    <style name="AppThemeLight" parent="MaterialDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="popupTheme">@style/actionsMenu</item>
        <item name="colorControlActivated">@color/primary</item>


        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item> <!-- Material 2 defines 12% alpha, primary color -->
        <item name="material_drawer_selected_legacy">@color/material_drawer_selected</item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
        <item name="material_drawer_header_selection_subtext">@color/material_drawer_dark_header_selection_subtext</item>
        <item name="material_drawer_legacy_style">false</item> <!-- Enables legacy Material 1 style -->

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light">
        <!--TODO Dark theme -->
    </style>


    <style name="actionsMenu" parent="Theme.AppCompat.Light">
        <item name="background">@color/accent</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="settings_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settings_normal_text">
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/material_drawer_item_primary_text</item>
    </style>

    <style name="settings_small_text">
        <item name="android:layout_marginTop">@dimen/margin3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/material_drawer_item_secondary_extra_text</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">@dimen/margin8</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="mainToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="circular_image">

        <item name="civ_border_color">@color/primary</item>
        <item name="android:layout_width">@dimen/settings_change_image_width</item>
        <item name="android:layout_height">@dimen/settings_user_change_photo_heigth</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
    </style>

    <style name="editTextPhone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/material_drawer_item_primary_text</item>
        <item name="android:layout_margin">@dimen/margin16</item>
        <item name="android:padding">@dimen/padding10</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="small_norm_text">
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/smallText14</item>
    </style>

</resources>